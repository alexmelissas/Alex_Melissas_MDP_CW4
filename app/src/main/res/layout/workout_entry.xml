<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <ImageView
        android:id="@+id/typeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/run_icon" />

    <TextView
        android:id="@+id/datetimeBox"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="229dp"
        android:clickable="false"
        android:text="88/88/88 | 88:88"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/durationBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-194dp"
        android:layout_marginLeft="-260dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/datetimeBox"
        android:layout_toRightOf="@+id/datetimeBox"
        android:lineSpacingExtra="8sp"
        android:text="88:88"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/distanceBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/durationBox"
        android:layout_toRightOf="@+id/durationBox"
        android:clickable="false"
        android:text="88.88km"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/favButton"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="-38dp"
        android:layout_marginLeft="-38dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/distanceBox"
        android:layout_toRightOf="@+id/distanceBox"
        android:clickable="false"
        app:srcCompat="@mipmap/heart_off_icon" />

</RelativeLayout>