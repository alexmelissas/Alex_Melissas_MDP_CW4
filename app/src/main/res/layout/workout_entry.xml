<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <ImageView
        android:id="@+id/typeImage"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/run_icon" />

    <TextView
        android:id="@+id/datetimeBox"
        android:layout_width="189dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="191dp"
        android:clickable="false"
        android:text="88 Jan 2020 @ 88:88"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/durationBox"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="230dp"
        android:text="88:88"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/distanceBox"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="40dp"
        android:clickable="false"
        android:text="88.88km"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mapButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="0dp"
        android:textAllCaps="false" />

</RelativeLayout>